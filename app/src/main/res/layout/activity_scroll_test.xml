<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_scroll_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >
    

    <com.mindimps.ui.scrollview.SuspensionScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="150dp"
               android:orientation="vertical"
               android:background="#ffa133"
               android:id="@+id/headview"
               ></LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="50dp"></LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#42a5f5"
                android:orientation="vertical"
                android:id="@+id/indicator"></LinearLayout>



        </LinearLayout>
    </com.mindimps.ui.scrollview.SuspensionScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF510c"
        android:orientation="vertical"
        android:id="@+id/toorbar">

    </LinearLayout>


</FrameLayout>
